<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.aykutsahin.muhasabe_yonetim_programi_javafx.controller.RegisterController"
        alignment="center" hgap="15" vgap="15"
        style="-fx-background-color: #f4f6f8; -fx-padding: 40px; -fx-alignment: center; -fx-pref-width: 450px; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 10, 0.0, 0, 5);">

    <!-- Başlık: Yeni Kayıt Ekranı -->
    <Label text="Kullanıcı Kayıt Ekranı" GridPane.rowIndex="0" GridPane.columnIndex="0"
           GridPane.columnSpan="2" style="-fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-alignment: center; -fx-padding: 0 0 20px 0;"
           GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>

    <!-- Kullanıcı Adı -->
    <Label text="Kullanıcı Adı:" GridPane.rowIndex="1" GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    <TextField fx:id="usernameField" promptText="Kullanıcı adınızı girin"
               GridPane.rowIndex="1" GridPane.columnIndex="1"
               style="-fx-background-color: #fff; -fx-border-radius: 5; -fx-padding: 10px; -fx-pref-width: 250px; -fx-border-color: #ddd; -fx-font-size: 14px; -fx-focus-color: #3498db;" />

    <!-- Email -->
    <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    <TextField fx:id="emailField" promptText="Email adresinizi girin"
               GridPane.rowIndex="2" GridPane.columnIndex="1"
               style="-fx-background-color: #fff; -fx-border-radius: 5; -fx-padding: 10px; -fx-pref-width: 250px; -fx-border-color: #ddd; -fx-font-size: 14px; -fx-focus-color: #3498db;" />

    <!-- Şifre -->
    <Label text="Şifre:" GridPane.rowIndex="3" GridPane.columnIndex="0"
           style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    <PasswordField fx:id="passwordField" promptText="Şifrenizi girin"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                   style="-fx-background-color: #fff; -fx-border-radius: 5; -fx-padding: 10px; -fx-pref-width: 250px; -fx-border-color: #ddd; -fx-font-size: 14px; -fx-focus-color: #3498db;" />

    <!-- Kayıt Ol Butonu -->
    <Button text="Kayıt Ol" onAction="#register"
            GridPane.rowIndex="4" GridPane.columnIndex="1"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5; -fx-padding: 12px 20px; -fx-pref-width: 250px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 5, 0.0, 0, 5);" />

</GridPane>


